modules = ["nodejs-20", "bash"]

[nix]
channel = "stable-24_05"

[workflows]

[[workflows.workflow]]
name = "Backend Dev Server"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma generate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:dev"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd front-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Setup Database"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma migrate dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma db seed"

[[workflows.workflow]]
name = "Run Tests"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:e2e"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:cov"

[[workflows.workflow]]
name = "Production Deploy"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma generate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma migrate deploy"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/pre-launch-checklist.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pm2 restart all || npm run start:prod"

[[workflows.workflow]]
name = "Load Testing"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install -g k6"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "k6 run scripts/load-test.js"

[[workflows.workflow]]
name = "Health Check"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -f http://localhost:4000/health || echo \"Backend health check failed\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ../front-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -f http://localhost:3000 || echo \"Frontend health check failed\""

[[workflows.workflow]]
name = "Setup Monitoring"
author = 45055370
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend-main"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/monitoring-setup.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install -g pm2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pm2 install pm2-logrotate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pm2 set pm2-logrotate:max_size 10M"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pm2 set pm2-logrotate:retain 30"
