# Production Environment Variables
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL="postgresql://username:password@host:5432/inbola_production?sslmode=require"

# JWT Secrets
JWT_SECRET="your-super-secure-jwt-secret-here"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-here"

# Redis
REDIS_URL="redis://redis-host:6379"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="INBOLA Kids <noreply@inbola.uz>"

# SMS Configuration (Eskiz.uz)
SMS_EMAIL="your-sms-email"
SMS_PASSWORD="your-sms-password"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST="./uploads"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"
ELASTICSEARCH_URL="http://elasticsearch:9200"

# Frontend URL
FRONTEND_URL="https://inbola.uz"

# API Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Cache TTL (seconds)
CACHE_TTL=3600

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
# Application Configuration
APP_NAME="INBOLA"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Bolalar uchun eng sifatli mahsulotlar marketplace"

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID="your-google-analytics-id"

# Social Media Links
TELEGRAM_CHANNEL="https://t.me/inbola_uz"
INSTAGRAM_PAGE="https://instagram.com/inbola.uz"
FACEBOOK_PAGE="https://facebook.com/inbola.uz"

# Support Configuration
SUPPORT_PHONE="+998712345678"
SUPPORT_EMAIL="support@inbola.uz"
SUPPORT_TELEGRAM="@inbola_support"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH="./backups"