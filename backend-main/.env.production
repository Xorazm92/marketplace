# Production Environment Variables for INBOLA E-commerce

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/inbola_production"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-for-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-for-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=4000
NODE_ENV="production"
FRONTEND_URL="https://your-domain.com"
BACKEND_URL="https://api.your-domain.com"

# File Upload Configuration
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,webp"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@inbola.uz"

# SMS Configuration (for OTP)
SMS_API_URL="https://notify.eskiz.uz/api"
SMS_API_TOKEN="your-sms-api-token"
SMS_FROM="INBOLA"

# Payment Gateway Configuration
# Click Payment
CLICK_MERCHANT_ID="your-click-merchant-id"
CLICK_SECRET_KEY="your-click-secret-key"
CLICK_SERVICE_ID="your-click-service-id"
CLICK_BASE_URL="https://api.click.uz/v2"

# Payme Payment
PAYME_MERCHANT_ID="your-payme-merchant-id"
PAYME_SECRET_KEY="your-payme-secret-key"
PAYME_BASE_URL="https://checkout.paycom.uz"

# Redis Configuration (for caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Security Configuration
CORS_ORIGIN="https://your-domain.com"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Admin Configuration
ADMIN_EMAIL="admin@inbola.uz"
ADMIN_PHONE="+998909876543"

# Application Configuration
APP_NAME="INBOLA"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Bolalar uchun eng sifatli mahsulotlar marketplace"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
GOOGLE_ANALYTICS_ID="your-google-analytics-id"

# Social Media Links
TELEGRAM_CHANNEL="https://t.me/inbola_uz"
INSTAGRAM_PAGE="https://instagram.com/inbola.uz"
FACEBOOK_PAGE="https://facebook.com/inbola.uz"

# Support Configuration
SUPPORT_PHONE="+998712345678"
SUPPORT_EMAIL="support@inbola.uz"
SUPPORT_TELEGRAM="@inbola_support"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH="./backups"
