########################################
# Backend Environment Example (placeholders)
########################################

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/inbola_db"

# Server Configuration
PORT=3001
NODE_ENV=development

# SMS Service
SMS_SERVICE_URL="https://notify.eskiz.uz/api/message/sms/send"
SMS_TOKEN="your-sms-token-here"

# File Upload
UPLOAD_PATH="./public/uploads"
MAX_FILE_SIZE=5242880

# CORS
FRONTEND_URL="http://localhost:3000"

# Email Service
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM="Your App Name <noreply@yourapp.com>"

# JWT Configuration (standardized)
JWT_ACCESS_SECRET="your-jwt-access-secret"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_WEBHOOK_SECRET="your-webhook-secret"

# App URL
APP_URL="http://localhost:3001"

# Payment Gateways
CLICK_MERCHANT_ID="your-click-merchant-id"
CLICK_SECRET_KEY="your-click-secret-key"
PAYME_MERCHANT_ID="your-payme-merchant-id"
PAYME_SECRET_KEY="your-payme-secret-key"

# Admin Configuration
ADMIN_EMAIL="admin@inbola.uz"
ADMIN_PASSWORD="secure-admin-password"

# Redis (for caching, if needed)
REDIS_URL="redis://localhost:6379"

# GraphQL
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false
