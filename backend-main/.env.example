# Database
DATABASE_URL="postgresql://username:password@localhost:5432/inbola_db"

# JWT Secrets
ACCESS_TOKEN_KEY="your-access-token-secret-key-here"
REFRESH_TOKEN_KEY="your-refresh-token-secret-key-here"
ACCESS_TOKEN_TIME="15m"
REFRESH_TOKEN_TIME="7d"

# Server Configuration
PORT=3001
NODE_ENV=production

# SMS Service
SMS_SERVICE_URL="https://notify.eskiz.uz/api/message/sms/send"
SMS_TOKEN="your-sms-token-here"

# File Upload
UPLOAD_PATH="./public/uploads"
MAX_FILE_SIZE=5242880

# CORS
FRONTEND_URL="https://your-frontend-domain.com"

# Email Service (if needed)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-email-password"

# Payment Gateways
CLICK_MERCHANT_ID="your-click-merchant-id"
CLICK_SECRET_KEY="your-click-secret-key"
PAYME_MERCHANT_ID="your-payme-merchant-id"
PAYME_SECRET_KEY="your-payme-secret-key"

# Admin Configuration
ADMIN_EMAIL="admin@inbola.uz"
ADMIN_PASSWORD="secure-admin-password"

# Redis (for caching, if needed)
REDIS_URL="redis://localhost:6379"

# GraphQL
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false

# Google OAuth2
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/api/v1/auth/google/callback"
