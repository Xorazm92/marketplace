# INBOLA Kids Marketplace - Enhanced Payment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=\"postgresql://username:password@localhost:5432/inbola_kids_marketplace\"

# ============================================================================
# JWT SECRETS (Generate secure random strings)
# ============================================================================
JWT_ACCESS_SECRET=\"your-super-secure-access-secret-key-min-32-chars\"
JWT_REFRESH_SECRET=\"your-super-secure-refresh-secret-key-min-32-chars\"
JWT_OTP_SECRET=\"your-super-secure-otp-secret-key-min-32-chars\"
ACCESS_TOKEN_TIME=\"15m\"
REFRESH_TOKEN_TIME=\"7d\"

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=4000
HOST=\"0.0.0.0\"
NODE_ENV=\"development\"

# ============================================================================
# FRONTEND & CORS
# ============================================================================
FRONTEND_URL=\"http://localhost:3000\"
CORS_ORIGIN=\"http://localhost:3000,http://127.0.0.1:3000\"

# ============================================================================
# SECURITY
# ============================================================================
SESSION_SECRET=\"your-session-secret-min-32-chars\"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=\"jpg,jpeg,png,gif,webp,pdf\"

# ============================================================================
# CHILD SAFETY CONFIGURATION
# ============================================================================
MAX_CHILD_SPENDING=500000
MAX_SESSION_TIME=7200
CONTENT_FILTER_ENABLED=true
PARENTAL_APPROVAL_REQUIRED=true

# ============================================================================
# CLICK PAYMENT GATEWAY
# ============================================================================
# Get these from Click merchant portal
CLICK_MERCHANT_ID=\"your-click-merchant-id\"
CLICK_SECRET_KEY=\"your-click-secret-key\"
CLICK_SERVICE_ID=\"your-click-service-id\"
CLICK_MERCHANT_USER_ID=\"your-click-merchant-user-id\"
CLICK_BASE_URL=\"https://api.click.uz/v2\"

# ============================================================================
# PAYME PAYMENT GATEWAY
# ============================================================================
# Get these from Payme merchant portal
PAYME_MERCHANT_ID=\"your-payme-merchant-id\"
PAYME_SECRET_KEY=\"your-payme-secret-key\"
PAYME_BASE_URL=\"https://checkout.paycom.uz\"

# ============================================================================
# UZUM PAYMENT GATEWAY
# ============================================================================
# Get these from Uzum Bank merchant portal
UZUM_MERCHANT_ID=\"your-uzum-merchant-id\"
UZUM_SECRET_KEY=\"your-uzum-secret-key\"
UZUM_API_KEY=\"your-uzum-api-key\"
UZUM_BASE_URL=\"https://api.uzum.uz/v1\"
UZUM_WEBHOOK_URL=\"https://yourdomain.com/api/payment/uzum/callback\"

# ============================================================================
# STRIPE (Optional - International Payments)
# ============================================================================
STRIPE_SECRET_KEY=\"sk_test_your-stripe-secret-key\"
STRIPE_WEBHOOK_SECRET=\"whsec_your-stripe-webhook-secret\"

# ============================================================================
# SMS SERVICE (Optional)
# ============================================================================
SMS_API_KEY=\"your-sms-api-key\"
SMS_API_SECRET=\"your-sms-api-secret\"

# ============================================================================
# EMAIL SERVICE (Optional)
# ============================================================================
SMTP_HOST=\"smtp.gmail.com\"
SMTP_PORT=587
SMTP_USER=\"your-email@gmail.com\"
SMTP_PASS=\"your-email-password\"

# ============================================================================
# GOOGLE OAUTH (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=\"your-google-client-id\"
GOOGLE_CLIENT_SECRET=\"your-google-client-secret\"

# ============================================================================
# TELEGRAM BOT (Optional)
# ============================================================================
TELEGRAM_BOT_TOKEN=\"your-telegram-bot-token\"
TELEGRAM_BOT_USERNAME=\"your-telegram-bot-username\"

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=\"https://your-sentry-dsn@sentry.io/project-id\"
NEW_RELIC_LICENSE_KEY=\"your-new-relic-license-key\"

# ============================================================================
# REDIS (Optional - for caching)
# ============================================================================
REDIS_URL=\"redis://localhost:6379\"

# ============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# ============================================================================
# Set to true for development environments to enable mock responses
ENABLE_PAYMENT_MOCKS=true

# Payment testing amounts (in UZS)
TEST_PAYMENT_AMOUNT=100000
TEST_REFUND_AMOUNT=50000

# ============================================================================
# PAYMENT GATEWAY URLs FOR WEBHOOKS
# ============================================================================
# Make sure these URLs are accessible from the internet
# Use ngrok or similar for local development
CLICK_WEBHOOK_URL=\"https://yourdomain.com/api/payment/webhooks/click\"
PAYME_WEBHOOK_URL=\"https://yourdomain.com/api/payment/webhooks/payme\"
UZUM_WEBHOOK_URL=\"https://yourdomain.com/api/payment/webhooks/uzum\"