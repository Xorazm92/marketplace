# Production Environment Variables for INBOLA

# Database
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://inbola_user:your-secure-postgres-password-here@postgres:5432/inbola_db

# Redis
REDIS_PASSWORD=your-secure-redis-password-here

# JWT Secrets (Generate strong secrets!)
ACCESS_TOKEN_KEY=your-very-long-and-secure-access-token-secret-key-here
REFRESH_TOKEN_KEY=your-very-long-and-secure-refresh-token-secret-key-here

# SMS Service
SMS_TOKEN=your-eskiz-sms-token-here

# Frontend/Backend URLs
FRONTEND_URL=https://inbola.uz
NEXT_PUBLIC_BASE_URL=https://inbola.uz
NEXT_PUBLIC_API_URL=https://inbola.uz/api

# Deployment Options
SEED_DATABASE=false

# SSL Certificates (if using custom SSL)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@inbola.uz
EMAIL_PASS=your-email-password

# Payment Gateways
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
