# INBOLA Production Environment Variables
# Bu faylni .env.prod nomi bilan nusxalab, haqiqiy qiymatlar bilan to'ldiring

# ===========================================
# üåç ENVIRONMENT CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database
DATABASE_URL="postgresql://inbola_user:STRONG_PASSWORD_HERE@postgres:5432/inbola_db"
POSTGRES_DB=inbola_db
POSTGRES_USER=inbola_user
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===========================================
# üî¥ REDIS CONFIGURATION
# ===========================================
REDIS_URL="redis://:STRONG_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
REDIS_HOST=redis
REDIS_PORT=6379

# ===========================================
# üîê JWT CONFIGURATION
# ===========================================
# Generate strong secrets: openssl rand -base64 64
ACCESS_TOKEN_KEY="your_super_secret_jwt_access_key_here_64_chars_minimum"
REFRESH_TOKEN_KEY="your_super_secret_jwt_refresh_key_here_64_chars_minimum"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# üì± SMS CONFIGURATION
# ===========================================
# SMS Provider (Eskiz.uz, Play Mobile, etc.)
SMS_TOKEN="your_sms_provider_token_here"
SMS_PROVIDER_URL="https://notify.eskiz.uz/api"
SMS_FROM="INBOLA"

# Development mode (set to false in production)
SMS_DEV_MODE=false

# ===========================================
# üìß EMAIL CONFIGURATION
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="INBOLA <noreply@inbola.uz>"

# ===========================================
# üåê FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL="https://inbola.uz"
NEXT_PUBLIC_API_URL="https://inbola.uz/api"
NEXT_PUBLIC_BASE_URL="https://inbola.uz"

# ===========================================
# üìÅ FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH="/app/public/uploads"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,webp,pdf,doc,docx"

# ===========================================
# üõ°Ô∏è SECURITY CONFIGURATION
# ===========================================
# CORS Origins (comma separated)
CORS_ORIGINS="https://inbola.uz,https://www.inbola.uz"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET="your_super_secret_session_key_here"

# ===========================================
# üìä MONITORING & LOGGING
# ===========================================
# Sentry for error tracking
